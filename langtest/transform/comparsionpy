from abc import ABC, abstractmethod


class BaseComparison(ABC):
    """
    Abstract class for comparison
    """
    alias_name = None
    supported_tasks = [
        'clinical-tests'
    ]

    @staticmethod
    @abstractmethod
    def transform(*args, **kwargs):
        """
        Abstract method for comparison
        """
        pass

    async def run(self, *args, **kwargs):
        """
        Abstract method for comparison
        """
        pass


class ClinicalComparison(BaseComparison):
    """
    Class for clinical comparison
    """

    @staticmethod
    def transform(*args, **kwargs):
        """
        Method for clinical comparison
        """
        pass

    async def run(self, *args, **kwargs):
        """
        Method for clinical comparison
        """
        pass
